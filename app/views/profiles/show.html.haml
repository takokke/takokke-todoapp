%h2.page-title Profile
.profile_user
  .profile_user_image
    = image_tag current_user.profile.avatar_image
  .profile_user_basicInfo
    .profile_user_name
      .profile_user_displayName
        #{current_user.display_name} (#{I18n.t("enum.genders.#{current_user.profile.gender}")})
      .profile_user_action
        = link_to 'Edit', edit_profile_path
    .profile_user_introduction
      %p Hello World!

- current_user.boards.each do |board|
  = link_to board_path(id: board.id) do
    .card
      .card_main_content
        .card_main_content_title= board.name
        .card_main_content_description= board.description
      .card_detail
        = image_tag board.user.profile.avatar_image
