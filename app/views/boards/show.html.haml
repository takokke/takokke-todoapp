.card
  .card_main
    .card_main_content
      .card_main_content_title= @board.name
      .card_main_content_description= @board.description
  .card_detail
    = image_tag @board.user.avatar_image

- @board.tasks.each do |task|
  = link_to board_task_path(id:task.id, board_id:@board.id) do
    .card
      .card_main
        .card_main_content
          .card_main_content_title= task.title
          .card_main_content_description= task.content


= link_to new_board_task_path(@board.id) do
  .card_add
    %p + Add new card